<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent"
    android:backgroundTintMode="multiply"
    android:padding="@dimen/qb_px_10"
    app:cardElevation="@dimen/qb_px_0"
    app:contentPadding="@dimen/qb_px_2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutChildAddWell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/wellPropertiesTV"
            android:layout_width="@dimen/qb_px_134"
            android:layout_height="@dimen/qb_px_50"
            android:background="@android:color/transparent"
            android:padding="@dimen/qb_px_10"
            android:paddingEnd="@dimen/qb_px_5"
            android:text="Number 1"
            android:gravity="center|start"
            android:textColor="@color/black"
            android:textSize="@dimen/qb_px_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <CheckBox
            android:id="@+id/checkbox_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/wellPropertiesTV"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_check_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="@dimen/qb_px_15"
            app:layout_constraintStart_toEndOf="@id/checkbox_yes"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_yes"
            app:layout_constraintTop_toTopOf="@id/checkbox_yes"

            />
        <CheckBox
            android:id="@+id/checkbox_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/text_check_yes"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/text_check_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:textSize="@dimen/qb_px_15"
            app:layout_constraintStart_toEndOf="@id/checkbox_no"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_no"
            app:layout_constraintTop_toTopOf="@id/checkbox_no"


            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>